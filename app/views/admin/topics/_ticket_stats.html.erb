<div id="discussion-flow" class="hidden-xs">
  <div class="tiny-header"><%= t(:support_pipeline, default: "Support Pipeline") %>:</div>

  <div id="admin-stats" class="row">

    <!--
    <div class="col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">
        <h2><%= Topic.all.count %></h2>
        <%= link_to "All", admin_topics_path(:status => 'all'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>
    -->

    <div class="has-arrow col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">
        <h2><%= @new %></h2>
        <%= link_to t(:new, default: "New"), admin_topics_path(:status => 'new'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>

    <div class="has-arrow col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">

      <h2><%= @active %></h2>
      <%= link_to t(:active, default: "Active"), admin_topics_path(:status => 'active'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>

    <div class="has-arrow col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">

        <h2><%= @open %></h2>
        <%= link_to t(:open, default: "Open"), admin_topics_path(:status => 'open'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>
    <div class="has-arrow col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">

        <h2><%= @mine %></h2>
        <%= link_to t(:mine, default: "Mine"), admin_topics_path(:status => 'assigned', :assigned_user_id => current_user), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>
    <div class="has-arrow col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">

        <h2><%= @pending %></h2>
        <%= link_to t(:pending, default:"Pending"), admin_topics_path(:status => 'pending'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-2 text-center">
      <div class="dummy"></div>
      <div class="stats">
        <h2><%= @closed %></h2>
        <%= link_to t(:closed, default: "Resolved"), admin_topics_path(:status => 'closed'), :remote => true, class: 'tiny-header admin-discussion-nav' %>
      </div>
    </div>

  </div>
</div>
